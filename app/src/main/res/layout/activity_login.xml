<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".avtivitys.LoginActivity">
    <include layout="@layout/nav_bar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo2"
        android:layout_gravity="center" />

    <com.example.hasee.dreammiuse_demo.views.InputView
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputviewHeight"
        android:layout_marginTop="@dimen/marginSize"
        app:input_icon="@drawable/ic_action_phone"
        app:input_hint="手机号"
        app:is_password="false"
        ></com.example.hasee.dreammiuse_demo.views.InputView>
    <View style="@style/BackLine"/>

    <com.example.hasee.dreammiuse_demo.views.InputView
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputviewHeight"
        android:layout_marginTop="@dimen/marginSize"
        app:input_icon="@drawable/ic_action_lock"
        app:input_hint="密码"
        app:is_password="true"
        ></com.example.hasee.dreammiuse_demo.views.InputView>
    <View style="@style/BackLine"/>
    <TextView
        android:id="@+id/registerClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerBtn"
        android:textColor="@color/mainColor"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/marginSize"
        />

    <Button
        android:id="@+id/loginClick"
        style="@style/LoginBtn"
        android:text="@string/loginBtn"
        android:layout_marginTop="@dimen/marginSize"
        />

</LinearLayout>